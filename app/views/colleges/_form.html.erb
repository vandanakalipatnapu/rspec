<style>
	.clr{color:red;}
</style>

<div class="container">
<center><h2 class="text-danger">New College</h2></center>
<hr/>
	<div class="form-horizontal">
		<%= form_for @college do |c| %>
			
			<div class="form-group ">
				<%= c.label :College,class:"control-label col-sm-3"%>
			<div class="col-sm-6">
				<%= c.text_field :name,class:"form-control",id:"title"%>
				<div id = "titleid"class = "clr"></div>
				<div class="hidden"id = "idi"><span class="glyphicon glyphicon-ok"></span></div>
			</div>
			</div>

			<div>
			

			<div class="form-group">
				<%= c.label :Email,class:"control-label col-sm-3"%>
			<div class="col-sm-6">
				<%= c.email_field :email,class:"form-control"%>
			</div>
			</div>

			<div class="form-group">
				<%= c.label :Location,class:"control-label col-sm-3"%>
			<div class="col-sm-6">
				<%= c.text_field :location,class:"form-control"%>
			</div>
			</div>

			<div class="form-group">
				<%= c.label :Phone_Number,class:"control-label col-sm-3"%>
			<div class="col-sm-6">
				<%= c.text_field :phno,class:"form-control"%>
			</div>
			</div>



			<div class="form-group">
				<%= c.submit "Save",class:"col-sm-offset-3 btn btn-sm btn-info"%>
				<%= link_to "All Colleges",colleges_path,class:"btn btn-sm btn-info col-sm-offset-0"%>
			</div>	

		<%end%>

		<% if @college.errors.present? %>
		    <div id="error_explanation">
		      <h3 class="text-danger">
		        <%= pluralize(@college.errors.count, "error") %> prohibited
		        this article from being saved:
		      </h3>
		      
		      <ul>
		        <% @college.errors.full_messages.each do |msg| %>
		          <div class="alert alert-danger">
		          	<li><%= msg %></li>
		          </div>
		        <% end %>
		      </ul>
		    
		    </div>
  		<% end %>

				
	</div>
</div>

